<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nazaruk.shad.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/profile_avatar_size"
            android:layout_height="@dimen/profile_avatar_size"
            android:layout_gravity="center"
            android:paddingTop="@dimen/avatar_padding_top"
            android:adjustViewBounds="false"
            android:contentDescription="@string/profile_decs" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_desc_text_size"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/profile_desc_padding_Top"
            android:text="@string/name" />

        <TextView
            android:id="@+id/github_link"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_desc_text_size"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:autoLink="web"
            android:text="@string/github_link"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
